@{
    <h1>Make predictions based on mummy information!</h1>
    <br />
    <form>
        <div class="accordion" id="accordionPanelsStayOpenExample">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                        Location
                    </button>
                </h2>
                <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show">
                    <div class="accordion-body">
                        <div>
                            <div class="row g-3 align-items-center">
                                <div class="col-auto">
                                    <label>North/South:</label>
                                </div>
                                <div class="col-auto">
                                    <input class="form-control" type="number" placeholder="0" aria-label="North South Input" step="10" min="0">
                                </div>
                                <div class="col-auto">
                                    <select class="form-select" aria-label="North/South">
                                        <option value="N" selected>N</option>
                                        <option value="S">S</option>
                                        <option value="0">Unknown</option>
                                    </select>
                                </div>
                                <div class="col-auto">
                                    <label>East/West:</label>
                                </div>
                                <div class="col-auto">
                                    <input class="form-control" type="number" placeholder="0" aria-label="North South Input" step="10" min="0">
                                </div>
                                <div class="col-auto">
                                    <select class="form-select" aria-label="East/West">
                                        <option value="E" selected>E</option>
                                        <option value="W">W</option>
                                        <option value="0">Unknown</option>
                                    </select>
                                </div>
                                <div class="col-auto">
                                    <label>Area:</label>
                                </div>
                                <div class="col-auto">
                                    <select class="form-select" aria-label="Area">
                                        <option value="NW" selected>NW</option>
                                        <option value="NE">NE</option>
                                        <option value="SW">SW</option>
                                        <option value="SE">SE</option>
                                        <option value="0">Unknown</option>
                                    </select>
                                </div>
                            </div>
                            <br />
                            <div class="row g-3 align-items-center">
                                <div class="col-auto">
                                    <label>West to Head:</label>
                                </div>
                                <div class="col-auto">
                                    <input class="form-control" type="number" placeholder="0" aria-label="West to Head" step="10" min="0">
                                </div>
                                <div class="col-auto">
                                    <label>West to Feet:</label>
                                </div>
                                <div class="col-auto">
                                    <input class="form-control" type="number" placeholder="0" aria-label="West to Feet" step="10" min="0">
                                </div>
                                <div class="col-auto">
                                    <label>South to Head:</label>
                                </div>
                                <div class="col-auto">
                                    <input class="form-control" type="number" placeholder="0" aria-label="South to Head" step="10" min="0">
                                </div>
                                <div class="col-auto">
                                    <label>South to Feet:</label>
                                </div>
                                <div class="col-auto">
                                    <input class="form-control" type="number" placeholder="0" aria-label="South to Feet" step="10" min="0">
                                </div>
                                
                            </div>
                            <br />
                            <div class="row g-3 align-items-center">
                                <div class="col-auto">
                                    <label>Depth:</label>
                                </div>
                                <div class="col-auto">
                                    <input class="form-control" type="number" placeholder="Meters" aria-label="Depth" step="0.1" min="0">
                                </div>
                                <div class="col-auto">
                                    <label>Year Excavated:</label>
                                </div>
                                <div class="col-auto">
                                    <input class="form-control" type="number" placeholder="2005" aria-label="Year" step="1" min="1950">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
                        Body Data
                    </button>
                </h2>
                <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        <div>
                            <div class="row g-3 align-items-center">
                                <div class="col-auto">
                                    <label>Length:</label>
                                </div>
                                <div class="col-auto">
                                    <input class="form-control" type="number" placeholder="Meters" aria-label="Length" step="0.1" min="0">
                                </div>
                            </div>
                        <br />
                        <p>
                            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseBones" aria-expanded="false" aria-controls="collapseBones">
                                Show Bone Data
                            </button>
                        </p>
                        <div class="collapse" id="collapseBones">
                            <div class="card card-body">
                                Some placeholder content for the collapse component. This panel is hidden by default but revealed when the user activates the relevant trigger.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false" aria-controls="panelsStayOpen-collapseThree">
                        Textile Information
                    </button>
                </h2>
                <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        <strong>This is the third item's accordion body.</strong> It is hidden by default, until the collapse plugin adds the appropriate classes that we use to style each element. These classes control the overall appearance, as well as the showing and hiding via CSS transitions. You can modify any of this with custom CSS or overriding our default variables. It's also worth noting that just about any HTML can go within the <code>.accordion-body</code>, though the transition does limit overflow.
                    </div>
                </div>
            </div>
        </div>
    </form>
}
