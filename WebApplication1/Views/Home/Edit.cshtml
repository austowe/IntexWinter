                <option value="B">Brown</option>
                <option value="K">Black</option>
                <option value="A">Brown-Red</option>
                <option value="R">Red</option>
                <option value="D" selected>Blonde</option>
                <option value="U">Uknown</option>
            }
            else if (Model.Haircolor == "U")
            {
                <option value=""></option>
                <option value="B">Brown</option>
                <option value="K">Black</option>
                <option value="A">Brown-Red</option>
                <option value="R">Red</option>
                <option value="D">Blonde</option>
                <option value="U" selected>Uknown</option>
            }
            else
            {
                <option value="" selected></option>
                <option value="B">Brown</option>
                <option value="K">Black</option>
                <option value="A">Brown-Red</option>
                <option value="R">Red</option>
                <option value="D">Blonde</option>
                <option value="U">Uknown</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="WestToHead">WestToHead</label>
        <input type="text" class="form-control" id="WestToHead" name="WestToHead" value="@Model.Westtohead" />
    </div>
    <div class="form-group">
        <label for="SamplesCollected">SamplesCollected</label>
        <select class="form-control" id="SamplesCollected" name="SamplesCollected" value="@Model.Samplescollected">
            @if (Model.Samplescollected == "True")
            {
                <option value=""></option>
                <option value="True" selected>True</option>
                <option value="False">False</option>
            }
            else if (Model.Samplescollected == "False")
            {
                <option value=""></option>
                <option value="True">True</option>
                <option value="False" selected>False</option>
            }
            else
            {
                <option value="" selected></option>
                <option value="True">True</option>
                <option value="False">False</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="Area">Area</label>
        <select class="form-control" id="Area" name="Area" value="@Model.Area">
            @if (Model.Area == "NW")
            {
                <option value=""></option>
                <option value="NW" selected>North West</option>
                <option value="SW">South West</option>
                <option value="SE">South East</option>
                <option value="NE">North East</option>
            }
            else if (Model.Area == "SW")
            {
                <option value=""></option>
                <option value="NW">North West</option>
                <option value="SW" selected>South West</option>
                <option value="SE">South East</option>
                <option value="NE">North East</option>
            }
            else if (Model.Area == "SE")
            {
                <option value=""></option>
                <option value="NW">North West</option>
                <option value="SW">South West</option>
                <option value="SE" selected>South East</option>
                <option value="NE">North East</option>
            }
            else if (Model.Area == "NE")
            {
                <option value=""></option>
                <option value="NW">North West</option>
                <option value="SW">South West</option>
                <option value="SE">South East</option>
                <option value="NE" selected>North East</option>
            }
            else
            {
                <option value="" selected></option>
                <option value="NW">North West</option>
                <option value="SW">South West</option>
                <option value="SE">South East</option>
                <option value="NE">North East</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="Burialid">Burialid</label>
        <input type="text" class="form-control" id="Burialid" name="Burialid" value="@Model.Burialid" />
    </div>
    <div class="form-group">
        <label for="Length">Length</label>
        <input type="number" class="form-control" id="Length" name="Length" min="0" max="10" step="0.01" value="@Model.Length" />
    </div>
    <div class="form-group">
        <label for="BurialNumber">BurialNumber</label>
        <input type="number" class="form-control" id="BurialNumber" name="BurialNumber" value="@Model.Burialnumber" />
