        <select class="form-control" id="HairColor" name="HairColor" value="@Model.Haircolor">
            @if (Model.Haircolor == "B")
            {
                <option value=""></option>
                <option value="B" selected>Brown</option>
                <option value="K">Black</option>
                <option value="A">Brown-Red</option>
                <option value="R">Red</option>
                <option value="D">Blonde</option>
                <option value="U">Uknown</option>
            }
            else if (Model.Haircolor == "K")
            {
                <option value=""></option>
                <option value="B">Brown</option>
                <option value="K" selected>Black</option>
                <option value="A">Brown-Red</option>
                <option value="R">Red</option>
                <option value="D">Blonde</option>
                <option value="U">Uknown</option>
            }
            else if (Model.Haircolor == "A")
            {
                <option value=""></option>
                <option value="B">Brown</option>
                <option value="K">Black</option>
                <option value="A" selected>Brown-Red</option>
                <option value="R">Red</option>
                <option value="D">Blonde</option>
                <option value="U">Uknown</option>
            }
            else if (Model.Haircolor == "R")
            {
                <option value=""></option>
                <option value="B">Brown</option>
                <option value="K">Black</option>
                <option value="A">Brown-Red</option>
                <option value="R" selected>Red</option>
                <option value="D">Blonde</option>
                <option value="U">Uknown</option>
