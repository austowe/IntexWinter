            }
            else if (Model.Ageatdeath == "N")
            {
                <option value=""></option>
                <option value="A">Adult</option>
                <option value="C">Child</option>
                <option value="I">Infant</option>
                <option value="N" selected>Neborn</option>
                <option value="U">Uknown</option>
            }
            else if (Model.Ageatdeath == "U")
            {
                <option value=""></option>
                <option value="A">Adult</option>
                <option value="C">Child</option>
                <option value="I">Infant</option>
                <option value="N">Neborn</option>
                <option value="U" selected>Uknown</option>
