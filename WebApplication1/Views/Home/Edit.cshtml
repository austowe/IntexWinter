@model Burialmain

<h2>Edit Burial</h2>

<form asp-action="Edit">
    <label for="id"></label>
    <input type="hidden" class="form-control" id="id" name="id" value="@Model.Id">

    <div class="form-group">
        <label for="SquareNorthSouth">Square North South</label>
        <input type="text" class="form-control" id="SquareNorthSouth" name="SquareNorthSouth" value="@Model.Squarenorthsouth">
    </div>
    <div class="form-group">
        <label for="HeadDirection">Head Direction</label>
        <select class="form-control" id="HeadDirection" name="HeadDirection">
            @if (Model.Headdirection == "W")
            {
                <option value=""></option>
