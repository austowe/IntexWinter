                <option value="S">South</option>
            }
            else if (Model.Northsouth == "S")
            {
                <option value=""></option>
                <option value="N">North</option>
                <option value="S" selected>South</option>
            }
            else
            {
                <option value="" selected></option>
                <option value="N">North</option>
                <option value="S">South</option>
            }
        </select>
    </div>
    <div class="form-group">
