                <option value="E">East</option>
            }
            else if (Model.Headdirection == "E")
            {
                <option value=""></option>
                <option value="W">West</option>
                <option value="E" selected>East</option>
            }
            else
            {
                <option value="" selected></option>
                <option value="W">West</option>
                <option value="E">East</option>
            }
        </select>
