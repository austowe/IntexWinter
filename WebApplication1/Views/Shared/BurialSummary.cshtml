@{
}

@model Burialmain

<div class="card card-outline-primary m-1 p-1">
    <div class="card-text p-1">
        <h3>Database id: @Model.Id</h3>
        <ul>
            <li>Composite Burial id: @Model.Squarenorthsouth@Model.Northsouth@Model.Squareeastwest@Model.Eastwest@Model.Area@Model.Burialnumber</li>
            <li>Sex: @Model.Sex</li>
            <li>Depth: @Model.Depth</li>
            <li>Age at death: @Model.Ageatdeath</li>
            <li>Head direction: @Model.Headdirection</li>
            <li>Hair color: @Model.Haircolor</li>
        </ul>


        <form method="post" asp-area="" asp-controller="Home" asp-action="Burial_Details">

            <input type="hidden" asp-for="@Model.Id" />
            @*<input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />*@

            <span class="card-text">
                <button type="submit" class="btn btn-success btn-sm float-end">Details</button>
            </span>

        </form>
    </div>
 </div>
